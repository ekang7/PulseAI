{
    "name": "Send Any Page Text",
    "version": "1.0",
    "manifest_version": 3,
    "description": "A button to grab and send page text content to a server on all sites.",
    "background": {
      "service_worker": "background.js"
    },
    
    "action": {
      "default_title": "Send text to server"
    },
  
    "permissions": [
      "scripting",
      "tabs"
    ],
  

    "host_permissions": [
      "*://*/*"
    ]
  }
  