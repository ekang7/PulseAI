{
    "name": "Pulse Screenshot Extension",
    "description": "Takes a screenshot with one click, saves it, and sends it to a server.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "tabs",
      "downloads",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }
  